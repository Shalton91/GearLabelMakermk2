<Window x:Class="GearLabelMakermk2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GearLabelMakermk2"
        mc:Ignorable="d"
        Title="Gear Label Maker" Height="100" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <ToolBar Grid.ColumnSpan="2">
            <Menu>
                <MenuItem x:Name="menuPrinter" Header="Printer" >
                    <MenuItem IsCheckable="True" Header="TEST"></MenuItem>
                </MenuItem>
            </Menu>
            <Button>Help</Button>
        </ToolBar>
        <TextBox x:Name="txtInput" Grid.Column="0" Grid.Row="1" Margin="5" />
        <Button Grid.Column="1" Grid.Row="1" Margin="5" Click="Button_Click" > Run </Button>
    </Grid>
</Window>
